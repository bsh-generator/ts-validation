{
  "name": "@bshg/validation",
  "version": "0.6.0",
  "description": "Validation Library for TypeScript projects",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./index.d.ts",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "rollup": "^4.21.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.3",
    "tsx": "^3.14.0",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "clean": "rm -rf lib/*",
    "build": "yarn run clean && npm run build:cjs && npm run build:esm",
    "build:esm": "rollup --config configs/rollup.config.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "play": "nodemon -e ts -w . -x tsx playground.ts",
    "test": "jest"
  },
  "keywords": [
    "ts",
    "ts-validation",
    "validation",
    "validator",
    "validate"
  ],
  "author": "Bouslaih Hamza <hamza.bousalih.bsh@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsh-generator/bshg_validation_ts.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "/lib",
    "/index.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "bugs": {
    "url": "https://github.com/bsh-generator/bshg_validation_ts/issues"
  },
  "homepage": "https://github.com/bsh-generator/bshg_validation_ts#readme"
}
